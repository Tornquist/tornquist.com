= form_for(@biography) do |f|
  - if @biography.errors.any?
    #error_explanation
      %h2
        = pluralize(@biography.errors.count, "error")
        prohibited this biography from being saved:
      %ul
        - @biography.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :slogan
    %br/
    = f.text_field :slogan
  .field
    = f.label :greeting
    %br/
    = f.text_field :greeting
  .field
    = f.label :website_name
    %br/
    = f.text_field :website_name
  .field
    = f.label :website_title
    %br/
    = f.text_field :website_title
  .field
    = f.label :bio_html
    %br/
    = f.text_area :bio_html, :rows => "10"
  .actions
    = f.submit class: "btn btn-success"
