<h1>Listing biographies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slogan</th>
      <th>Greeting</th>
      <th>Website name</th>
      <th>Website title</th>
      <th>Bio html</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biographies.each do |biography| %>
      <tr>
        <td><%= biography.name %></td>
        <td><%= biography.slogan %></td>
        <td><%= biography.greeting %></td>
        <td><%= biography.website_name %></td>
        <td><%= biography.website_title %></td>
        <td><%= biography.bio_html %></td>
        <td><%= link_to 'Show', biography %></td>
        <td><%= link_to 'Edit', edit_biography_path(biography) %></td>
        <td><%= link_to 'Destroy', biography, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

