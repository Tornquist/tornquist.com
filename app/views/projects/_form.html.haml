= form_for(@project, :html => { :style => "margin-bottom: 5px" })  do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :caption
    %br/
    = f.text_area :caption
  .field
    = f.label :title
    %br/
    = f.text_area :title
  .field
    = f.label :subtitle
    %br/
    = f.text_area :subtitle
  .field
    = f.label :thumbnail
    %br/
    = f.text_area :thumbnail
  .field
    = f.label :image
    %br/
    = f.text_area :image
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :google_url
    %br/
    = f.text_area :google_url
  .field
    = f.label :github_url
    %br/
    = f.text_area :github_url
  .field
    = f.label :music_url
    %br/
    = f.text_area :music_url
  .field
    = f.label :date
    %br/
    = f.text_area :date
  .field
    = f.label :copyright
    %br/
    = f.text_area :copyright
  .field
    = f.label :category
    %br/
    = f.text_area :category
  .field
    = f.label :rank
    %br/
    = f.number_field :rank
  .actions
    = f.submit class: "btn btn-success"
