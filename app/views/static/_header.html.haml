.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header.page-scroll
      %button.navbar-toggle{ type: "button", data: {toggle: "collapse", target: "#main-navigation"}}
        %span.sr-only
          Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to @website_name, "#page-top", class: "navbar-brand page-scroll"
    #main-navigation.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li.hidden
          =link_to "", "#page-top"
        %li
          =link_to @site_header.biography_title, "#bio", class: "page-scroll"
        %li
          =link_to @site_header.employment_title, "#about", class: "page-scroll"
        %li.margin-15
          =link_to @site_header.portfolio_title, "#portfolio", class: "page-scroll"
        %li
          =link_to @site_header.external_title, @site_header.external_url, class: "nav-button"
