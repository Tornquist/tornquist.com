%section#about
  .container
    .row
      .col-lg-12.text-center
        %h2.section-heading
          =@site_header.employment_title
        %h3.section-subheading.text-muted
          =@site_header.employment_subtitle
    .row
      .col-lg-12
        %ul.timeline
          -@employers.each do |employer|
            %li{class: cycle('timeline', 'timeline-inverted')}
              .timeline-image
                =image_tag employer.image, class: "img-circle img-responsive"
              .timeline-panel
                .timeline-heading
                  %h4
                    =employer.dates
                  %h4.subheading
                    =employer.name
                .timeline-body
                  %p.text-muted
                    =employer.description
