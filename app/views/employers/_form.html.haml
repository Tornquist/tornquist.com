= form_for(@employer, :html => { :style => "margin-bottom: 5px" } ) do |f|
  - if @employer.errors.any?
    #error_explanation
      %h2
        = pluralize(@employer.errors.count, "error")
        prohibited this employer from being saved:
      %ul
        - @employer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :dates
    %br/
    = f.text_area :dates
  .field
    = f.label :name
    %br/
    = f.text_area :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :image
    %br/
    = f.text_area :image
  .field
    = f.label :rank
    %br/
    = f.number_field :rank
  .actions
    = f.submit class: "btn btn-success"
